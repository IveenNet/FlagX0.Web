@model FlagX0.Web.Models.ViewModels.FlagViewModel

<h2>Create Flag</h2>

<form asp-action="create" asp-controller="Flags" method="post" class="row row-cols-lg-auto g-3 align-items-center">
    <div class="col-12">
        <label class="visually-hidden" for="flagName">Flag Name</label>
        <div class="input-group">
            <div class="input-group-text">Flag Name</div>
            <input type="text" asp-for="Name" class="form-control" id="inlineFormInputGroupUserName" placeholder="Flag Name" />
        </div>
    </div>

    <div class="col-12">
        <div class="form-check form-switch">
            <input type="checkbox" class="form-check-input" asp-for="IsEnabled" role="switch" />
        </div>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Create Flag</button>
    </div>
</form>
